/* components/mainHeader/mainHeader.wxss */

.header {
  display: flex;
  padding: 20rpx;
  width: 100%;
  height: 100rpx;
  background-color: #d43c33;
  align-items: center;
  border-top:2rpx solid rgba(243, 243, 243, .3);
}

.logo {
  flex: 1;
  display: flex;
  align-items: center;
}

.icon {
  background-color: #ffffff;
  width: 50rpx;
  border-radius: 50%;
}

.title {
  flex: 8;
  display: flex;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 32rpx;
  color: #ffffff;
  justify-content: flex-start;
  align-items: center;
  padding-left: 6rpx;
}

.downLoad {
  flex: 3;
  width: 200rpx;
  height: 72rpx;
  background-color: #ffffff;
  line-height: 72rpx;
  text-align: center;
  border-radius: 40rpx;
  color: #d43c33;
  font-size: 32rpx;
  font-weight: 350;
}