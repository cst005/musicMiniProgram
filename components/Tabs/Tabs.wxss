view,
text {
  box-sizing: border-box;
}

.tabs_title {
  position: fixed;
  display: flex;
  padding: 10rpx 0;
  height: 80rpx;
  width: 100%;
  z-index: 7;
}

.title_item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #ffffff;
  border-bottom: 4rpx solid rgba(243, 243, 243, .8);
}

.active {
  font-weight: 600;
  color: #d43c33;
  border-bottom: 4rpx solid #d43c33;
}

.tabs_content {

  padding-top: 90rpx;
